{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Articles",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "heading": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 30
    },
    "slug": {
      "type": "uid",
      "targetField": "heading",
      "required": true
    },
    "category": {
      "model": "article-category",
      "via": "articles"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "article": {
      "type": "richtext",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 20
    }
  }
}
